<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3939"
    tools:context=".WrongAnswerActivity">

    <TextView
        android:id="@+id/Incorrecttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incorrect"
        android:textColor="#EF0202"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/tryAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:textColor="#FD0404"
        app:iconTint="#F30606"
        app:layout_constraintEnd_toEndOf="@+id/wHome"
        app:layout_constraintStart_toStartOf="@+id/wHome"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/wHome"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:text="I'm done for now"
        android:textColor="#FF0000"
        app:iconTint="#E40D0D"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tryAgainButton" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="203dp"
        android:layout_height="163dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/red_x" />

    <TextView
        android:id="@+id/wLongestStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longest Streak:"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/saveButton"
        app:layout_constraintEnd_toStartOf="@+id/saveButton"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/saveButton" />

    <TextView
        android:id="@+id/wcurrentStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final Streak:"
        android:textColor="#E40707"
        app:layout_constraintBottom_toBottomOf="@+id/tryAgainButton"
        app:layout_constraintEnd_toEndOf="@+id/wLongestStreak"
        app:layout_constraintStart_toStartOf="@+id/wLongestStreak"
        app:layout_constraintTop_toTopOf="@+id/tryAgainButton" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SaveScore"
        android:textColor="#E40D0D"
        app:iconTint="#E40D0D"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/wHome"
        app:layout_constraintStart_toStartOf="@+id/wHome" />
</androidx.constraintlayout.widget.ConstraintLayout>